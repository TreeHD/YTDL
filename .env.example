# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here

# Restrict bot usage to specific users (comma-separated, leave empty to allow all)
ALLOWED_CHAT_IDS=

# Local Bot API Server URL (for files > 50MB)
API_URL=http://host.docker.internal:8081/bot

# Proxy Configuration (for geo-restricted content)
PROXY=
PROXY_LIST=

# Maximum disk usage in GB for downloads folder (0 = no limit)
MAX_DISK_GB=10

# Subscription check interval in seconds (how often to check for new videos)
SUBSCRIPTION_CHECK_INTERVAL=300

# Telegram API credentials (required for Local Bot API Server)
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
